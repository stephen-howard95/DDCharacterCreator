<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/spellcasting_ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/spell_save_dc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/spell_attack_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/add_spells_to_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Add Spells"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spells_known_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="@string/spells_known"/>
        <TextView
            android:id="@+id/cantrips_known_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="@string/cantrips_known"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spells_known"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cantrips_known"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/spell_slots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/spell_slot_1"
                    style="@style/spellSlotsStyle"
                    android:text="@string/first_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_2"
                    style="@style/spellSlotsStyle"
                    android:text="@string/first_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_3"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/first_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_4"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/first_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_5"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/second_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_6"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/second_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_7"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/second_level_spell"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/spell_slot_8"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/third_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_9"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/third_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_10"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/third_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_11"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fourth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_12"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fourth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_13"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fourth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_14"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fifth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_15"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fifth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_16"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/fifth_level_spell"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/spell_slot_17"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/sixth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_18"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/sixth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_19"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/seventh_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_20"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/seventh_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_21"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/eighth_level_spell"/>
                <CheckBox
                    android:id="@+id/spell_slot_22"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"
                    android:text="@string/ninth_level_spell"/>
                <CheckBox
                    android:id="@+id/signature_spell_1"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"/>
                <CheckBox
                    android:id="@+id/signature_spell_2"
                    style="@style/spellSlotsStyle"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

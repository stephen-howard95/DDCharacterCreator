<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/character_name"/>

            <TextView
                android:id="@+id/character_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/level"/>

            <TextView
                android:id="@+id/character_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/race"/>

            <TextView
                android:id="@+id/character_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/character_class"/>

            <TextView
                android:id="@+id/character_alignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/alignment"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/character_appearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/height_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/height"/>
            <EditText
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/height"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/weight_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/weight"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/age_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/age"/>
            <EditText
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/age"
                android:importantForAutofill="no" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/skin_color_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/skin_color"/>
            <EditText
                android:id="@+id/skin_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/skin_color"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/eye_color_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/eye_color"/>
            <EditText
                android:id="@+id/eye_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/eye_color"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/hair_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hair"/>
            <EditText
                android:id="@+id/hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hair"
                android:importantForAutofill="no" />

        </LinearLayout>

        <TextView
            android:id="@+id/personality_traits_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/personality_traits"
            android:layout_marginStart="12dp" />
        <EditText
            android:id="@+id/personality_traits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/personality_traits"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/ideals_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/ideals"
            android:layout_marginStart="12dp" />
        <EditText
            android:id="@+id/ideals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ideals"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/bonds_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/bonds"
            android:layout_marginStart="12dp" />
        <EditText
            android:id="@+id/bonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/bonds"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/flaws_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/flaws"
            android:layout_marginStart="12dp" />
        <EditText
            android:id="@+id/flaws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/flaws"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/languages_known"
            android:text="@string/languages_known"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/backstory_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/backstory_label"
            android:layout_marginStart="12dp" />
        <EditText
            android:id="@+id/backstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/character_backstory"
            android:importantForAutofill="no" />

    </LinearLayout>
</ScrollView>
